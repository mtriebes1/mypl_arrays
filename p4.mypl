set y := 8.22 - 2.22
print(concat("should be 6.0: ", dtos(y)))
print("\n")

set y := 2.0 * 3.0
print(concat("should be 6.0: ", dtos(y)))
print("\n")

set y := 12.0 / 2.0
print(concat("should be 6.0: ", dtos(y)))
print("\n")

set y := 2.0 + 3.0 + 1.0
print(concat("should be 6.0: ", dtos(y)))
